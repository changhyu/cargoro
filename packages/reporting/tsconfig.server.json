{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": ["src/server/**/*", "server.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
