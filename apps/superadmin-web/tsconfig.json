{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "@/features/*": ["./app/features/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/services/*": ["./app/services/*"],
      "@/types/*": ["./app/types/*"],
      "@/utils/*": ["./app/utils/*"],
      "@cargoro/ui": ["../../packages/ui/index"],
      "@cargoro/ui/*": ["../../packages/ui/*"],
      "@cargoro/utils": ["../../packages/utils/src/index"],
      "@cargoro/utils/*": ["../../packages/utils/src/*"],
      "@cargoro/types": ["../../packages/types/index"],
      "@cargoro/types/*": ["../../packages/types/*"],
      "@cargoro/api-client": ["../../packages/api-client/index"],
      "@cargoro/api-client/*": ["../../packages/api-client/*"],
      "@cargoro/auth": ["../../packages/auth/index"],
      "@cargoro/auth/*": ["../../packages/auth/*"],
      "@cargoro/analytics": ["../../packages/analytics/index"],
      "@cargoro/analytics/*": ["../../packages/analytics/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "types/**/*.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
