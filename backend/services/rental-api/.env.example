# 환경 설정
ENVIRONMENT=development
# ENVIRONMENT=production

# 데이터베이스
DATABASE_URL=postgresql://postgres:password@localhost:5432/cargoro_rental

# JWT 설정
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 보안 설정
CSRF_SECRET_KEY=another-very-secure-secret-key
SESSION_SECRET_KEY=yet-another-secure-secret-key

# Redis (옵션)
# REDIS_URL=redis://localhost:6379

# 허용된 호스트 (프로덕션)
# ALLOWED_HOSTS=api.cargoro.com,*.cargoro.com

# CORS 허용 도메인 (프로덕션)
# CORS_ALLOWED_ORIGINS=https://cargoro.com,https://www.cargoro.com,https://app.cargoro.com

# 로깅
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# 이메일 설정 (선택사항)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@cargoro.com

# SMS 설정 (선택사항)
# SMS_API_KEY=your-sms-api-key
# SMS_FROM=CarGoro

# 파일 업로드
MAX_UPLOAD_SIZE=10485760  # 10MB

# API 키 (외부 서비스)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
